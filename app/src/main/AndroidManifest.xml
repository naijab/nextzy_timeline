<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naijab.nextzytimeline">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".ui.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name=".ui.people.PeopleActivity"
            android:label="@string/add_people">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.naijab.nextzytimeline.ui.main.MainActivity" />
        </activity>

    </application>

</manifest>